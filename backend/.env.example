# API Configuration
API_TITLE="Auto Structure Analysis API"
API_VERSION="0.1.0"

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://johntfoster.github.io

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=30

# File Upload Limits
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png

# Authentication (set to true to enable API key authentication)
API_KEY_ENABLED=false
API_KEY=your-secret-api-key-here

# Database
DATABASE_URL=sqlite:///./analyses.db

# Google Cloud Platform (optional)
GCP_PROJECT_ID=your-gcp-project-id
